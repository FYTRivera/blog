<%= link_to 'New Article', new_article_path %>
<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Body</th>
        </tr>
    </thead>
    <tbody>
        <% @articles.each do |article| %>
            <tr>
                <td><%= article.id%></td>
                <td><%= article.name%></td>
                <td><%= article.body%></td>
                <td><%= link_to 'Edit Article', edit_article_path(article.id) %></td>
                <td><%= button_to 'Delete Article', delete_article_path(article.id), method: :delete %></td>
            </tr>
        <% end %>
    </tbody>
</table>
